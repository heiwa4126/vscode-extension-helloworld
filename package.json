{
	"name": "helloworld",
	"publisher": "yourname",
	"displayName": "HelloWorld",
	"description": "VSCode Extension tutorial sample. see https://code.visualstudio.com/api/get-started/your-first-extension",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/heiwa4126/vscode-extension-helloworld.git"
	},
	"engines": {
		"vscode": "^1.109.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"icon": "images/icon.png",
	"contributes": {
		"commands": [
			{
				"command": "helloworld.helloWorld",
				"title": "Hello World",
				"category": "My Tutorial"
			}
		]
	},
	"scripts": {
		"preinstall": "pnpm audit --production --audit-level high",
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src",
		"test": "vscode-test",
		"vsix": "pnpm run lint && pnpm run compile && node -e \"require('node:fs').mkdirSync('dist',{recursive:true});\" && node -e \"const p=require('./package.json'); const {execSync}=require('node:child_process'); const out='dist/'+p.name+'-'+p.version+'.vsix'; execSync('pnpm exec vsce package --out '+out,{stdio:'inherit'});\"",
		"vsix:install": "node -e \"const p=require('./package.json'); const {execSync}=require('node:child_process'); const vsix='dist/'+p.name+'-'+p.version+'.vsix'; execSync('code --install-extension '+vsix,{stdio:'inherit'});\"",
		"vsix:uninstall": "node -e \"const p=require('./package.json'); const {execSync}=require('node:child_process'); const id=p.publisher+'.'+p.name; execSync('code --uninstall-extension '+id,{stdio:'inherit'});\"",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "~25.3.2",
		"@types/sinon": "^21.0.0",
		"@types/vscode": "^1.109.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^10.0.2",
		"sinon": "^21.0.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.1"
	}
}
